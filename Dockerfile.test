FROM golang:1.13-alpine
MAINTAINER Conjur Inc.
LABEL id="secrets-provider-for-k8s-test-runner"

WORKDIR /secrets-provider-for-k8s

RUN apk add -u curl \
               gcc \
               git \
               mercurial \
               musl-dev

COPY go.mod go.sum /secrets-provider-for-k8s/

RUN go mod download

COPY . .

ENTRYPOINT [ "go", "test", "-v", "-timeout", "3m" ]
